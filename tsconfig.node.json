{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "strict": true,
    "types": [
      "node",
      "vite/client",
      "vitest",
      "jest"
    ]
  },
  "include": [
    "./vite.config.ts",
    "./vite.setup.ts",
    "./src/**/*.ts",
    "./tests/**/*.ts"
  ]
}
